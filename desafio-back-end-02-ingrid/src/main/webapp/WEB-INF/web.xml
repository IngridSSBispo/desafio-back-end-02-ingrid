<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


  <servlet>
    <servlet-name>listProducts</servlet-name>
    <servlet-class>application.ListProducts</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>createProduct</servlet-name>
    <servlet-class>application.CreateProduct</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>deleteProduct</servlet-name>
    <servlet-class>application.DeleteProduct</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updateProduct</servlet-name>
    <servlet-class>application.UpdateProduct</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>listProducts</servlet-name>
    <url-pattern>/listProducts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>createProduct</servlet-name>
    <url-pattern>/createProducts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>deleteProduct</servlet-name>
    <url-pattern>/deleteProducts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateProduct</servlet-name>
    <url-pattern>/updateProducts</url-pattern>
  </servlet-mapping>

</web-app>